{
  "name": "todo-list",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "prisma migrate deploy && prisma db push && npm run test:backend ",
    "dev": "next dev --port 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:frontend": "jest --config jest.client.config.ts",
    "test:backend": "jest --config jest.server.config.ts",
    "test:backend:watch": "jest --watch --config jest.server.config.ts",
    "test:backend:coverage": "jest --config jest.server.config.ts --coverage",
    "cypress:open": "next dev --port 3001 && cypress open"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "next": "14.2.6",
    "qs": "^6.13.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20",
    "@types/qs": "^6.9.15",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cypress": "^13.14.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
